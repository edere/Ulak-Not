@using UlakNot.Entity
@model UnUsers
@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<h1>Profilimi Güncelle</h1>
<hr />
<div class="row">
    <!-- left column -->
    <form action="~/Home/EditProfile" method="post" enctype="multipart/form-data">
        <div class="col-sm-5">
            <div class="text-center">
                <div class="col-md-12 col-lg-12 "> <img src="~/Images/@Model.ImageName" class="avatar img-circle img-thumbnail" alt="avatar"></div>
                <h6>Farklı fotoğraf yükleyin</h6>
                <input type="file" name="ImageName" class="text-center center-block well well-sm">
            </div>
        </div>
        <!-- edit form column -->
        <div class="col-sm-7 personal-info">
            <h3>Kullanıcı Bilgileri</h3>

            <div class="form-group">
                
                    <input class="form-control" name="Id" value="@Model.Id" type="text">
                
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Ad:</label>
                <div class="col-lg-8">
                    <input class="form-control" name="Name" value="@Model.Name" type="text">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Soyad:</label>
                <div class="col-lg-8">
                    <input class="form-control" name="Surname" value="@Model.Surname" type="text">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">E-posta:</label>
                <div class="col-lg-8">
                    <input class="form-control" name="EMail" value="@Model.Email" type="text">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Üniversite:</label>
                <div class="col-lg-8">
                    <input class="form-control" name="University" value="@Model.University" type="text">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Bölüm:</label>
                <div class="col-lg-8">
                    <input class="form-control" name="Department" value="@Model.Department" type="text">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Kullanıcı Adı:</label>
                <div class="col-md-8">
                    <input class="form-control" name="Username" value="@Model.Username" type="text">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Şifre:</label>
                <div class="col-md-8">
                    <input class="form-control" name="Password" value="@Model.Password" type="password">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Şifre Tekrarı:</label>
                <div class="col-md-8">
                    <input class="form-control" value="@Model.Password" type="password">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <span></span>
                    <input class="btn btn-default" value="İptal" type="reset">
                </div>
            </div>
        </div>
    </form>
</div>



