@using UlakNot.BusinessLayer.Control
@using UlakNot.Entity

@{
    CategoryManager cm = new CategoryManager();
    List<UnCategories> list = cm.GetCategories();
}

<div class="sidebar">
    <div class="mini-submenu">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </div>
    <div class="list-group">
        <span href="#" class="list-group-item active">
            Bölümler
            <span class="pull-right" id="slide-submenu">
                <i class="fa fa-times"></i>
            </span>
        </span>
        @{
            foreach (UnCategories cat in list)
            {
                <a href="/Category/Select/@cat.Id" title="@cat.Description" class="list-group-item"><i class="fa fa-comment-o"></i> @cat.Name</a>
            }
        }
    </div>
</div>
